extends base.pug

block scripts
  script(src='/static/index.js')

block style
  style
    include ../static/style.css
    include ../static/stylecontact.css

block content
  div.container
    h1 Contact Us
    form(id="contactForm" class="myform")
      input(type="text", class="myinput", name="name", placeholder="Enter Your Name", required)
      input(type="tel", class="myinput", name="phone", placeholder="Enter Your Phone Number", required)
      input(type="email", class="myinput", name="email", placeholder="Enter Your Email", required)
      input(type="text", class="myinput", name="address", placeholder="Enter Your Address", required)
      textarea(class="myinput", name="desc", placeholder="Enter Your Concern", required)
      button(type="button", class="btn", id="submitButton")
        | Submit
    div#message
